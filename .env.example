# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_CLUSTER=devnet

# Your Solana wallet private key (base58 encoded)
# WARNING: Never commit this file with real keys!
# Use devnet for testing only
WALLET_PRIVATE_KEY=your_base58_private_key_here

# Jupiter API
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Trading Configuration
DEFAULT_SLIPPAGE_BPS=50        # 0.5%
MAX_RETRIES=3
RETRY_DELAY=1000

# Safety Limits
MAX_PRICE_IMPACT=2.0           # 2% max price impact
MAX_SLIPPAGE_BPS=100           # 1% max slippage
MIN_ROUTE_COUNT=1
MIN_OUTPUT_RATIO=0.90          # Expect at least 90% output
WARN_PRICE_IMPACT=1.0          # Warning at 1%
WARN_SLIPPAGE_BPS=50           # Warning at 0.5%

# Paper Trading
PAPER_TRADING=true             # Always start with paper trading!
PAPER_TRADING_BALANCE=1000     # Starting balance in SOL

# Logging
LOG_LEVEL=info
