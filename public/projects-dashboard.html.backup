<!DOCTYPE html>
<html>
<head>
  <title>Project Tracker - Time Management</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 20px;
      min-height: 100vh;
    }
    
    .nav-bar {
      background: rgba(255,255,255,0.1);
      backdrop-filter: blur(10px);
      padding: 15px 30px;
      border-radius: 15px;
      margin-bottom: 20px;
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
    }
    
    .nav-btn {
      background: rgba(255,255,255,0.2);
      color: white;
      text-decoration: none;
      padding: 10px 20px;
      border-radius: 8px;
      font-weight: bold;
      transition: all 0.3s;
    }
    
    .nav-btn:hover {
      background: rgba(255,255,255,0.3);
      transform: translateY(-2px);
    }
    
    .nav-btn.active {
      background: white;
      color: #667eea;
    }
    
    .container { max-width: 1600px; margin: 0 auto; }
    
    .header {
      background: rgba(255,255,255,0.1);
      backdrop-filter: blur(10px);
      padding: 30px;
      border-radius: 20px;
      margin-bottom: 20px;
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 20px;
    }
    
    .timer-display {
      font-size: 3em;
      font-weight: bold;
      font-family: 'Courier New', monospace;
    }
    
    .quick-start {
      background: rgba(255,255,255,0.1);
      backdrop-filter: blur(10px);
      padding: 30px;
      border-radius: 20px;
      margin-bottom: 20px;
      color: white;
    }
    
    .quick-start h2 {
      margin-bottom: 20px;
      font-size: 1.5em;
    }
    
    .quick-start-controls {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      align-items: center;
    }
    
    .project-select {
      flex: 1;
      min-width: 300px;
      padding: 15px;
      border: none;
      border-radius: 10px;
      font-size: 1.1em;
      background: white;
      cursor: pointer;
    }
    
    .btn-quick-start {
      padding: 15px 40px;
      background: #4ade80;
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 1.2em;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s;
    }
    
    .btn-quick-start:hover {
      background: #22c55e;
      transform: scale(1.05);
    }
    
    .btn-quick-start:disabled {
      background: #6b7280;
      cursor: not-allowed;
      transform: none;
    }
    
    .btn-add-project {
      padding: 15px 30px;
      background: rgba(255,255,255,0.2);
      color: white;
      border: 2px solid white;
      border-radius: 10px;
      font-size: 1.1em;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s;
    }
    
    .btn-add-project:hover {
      background: white;
      color: #667eea;
    }
    
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }
    
    .card {
      background: white;
      padding: 25px;
      border-radius: 15px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
      transition: all 0.3s;
    }
    .card:hover { transform: translateY(-5px); }
    
    .card.active {
      border: 3px solid #4ade80;
      background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
      animation: pulse-border 2s infinite;
    }
    
    @keyframes pulse-border {
      0%, 100% { box-shadow: 0 0 20px rgba(74, 222, 128, 0.5); }
      50% { box-shadow: 0 0 40px rgba(74, 222, 128, 0.8); }
    }
    
    .project-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }
    
    .project-name {
      font-size: 1.3em;
      font-weight: bold;
      color: #667eea;
    }
    
    .category-badge {
      background: #667eea;
      color: white;
      padding: 5px 12px;
      border-radius: 15px;
      font-size: 0.85em;
    }
    
    .time-display {
      font-size: 2em;
      font-weight: bold;
      text-align: center;
      margin: 15px 0;
      color: #333;
    }
    
    .btn {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 8px;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s;
      margin: 5px 0;
    }
    
    .btn-start {
      background: #4ade80;
      color: white;
    }
    .btn-start:hover { background: #22c55e; }
    
    .btn-stop {
      background: #f87171;
      color: white;
    }
    .btn-stop:hover { background: #ef4444; }
    
    .summary-card {
      grid-column: 1 / -1;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }
    
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }
    
    .stat-box {
      background: rgba(255,255,255,0.1);
      padding: 20px;
      border-radius: 10px;
      text-align: center;
    }
    
    .stat-value {
      font-size: 2.5em;
      font-weight: bold;
      margin: 10px 0;
    }
    
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.7);
      backdrop-filter: blur(5px);
      z-index: 1000;
      align-items: center;
      justify-content: center;
    }
    
    .modal.show {
      display: flex;
    }
    
    .modal-content {
      background: white;
      padding: 40px;
      border-radius: 20px;
      max-width: 500px;
      width: 90%;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    
    .modal-header {
      font-size: 2em;
      font-weight: bold;
      color: #667eea;
      margin-bottom: 30px;
    }
    
